# --- 1. THE FOUNDATION (Global Variables & Reset) ---
html_ui/src/css/variables.css :: """
:root {
    --primary: {{ primary_color }};
    --primary-hover: #4f46e5;
    --secondary: {{ secondary_color }};
    --bg: {{ bg_color }};
    --surface: {{ surface_color }};
    --text: #0f172a;
    --text-light: #64748b;
    --border: #e2e8f0;
    --success: #10b981;
    --warning: #f59e0b;
    --danger: #ef4444;
    --radius-sm: 0.25rem;
    --radius: 0.5rem;
    --radius-lg: 1rem;
    --radius-full: 9999px;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
    --font-main: system-ui, -apple-system, sans-serif;
}

* { box-sizing: border-box; }
body {
    font-family: var(--font-main);
    background: var(--bg);
    color: var(--text);
    margin: 0;
    padding: 20px;
    line-height: 1.5;
}
.component-wrapper {
    background: var(--surface);
    padding: 2rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    margin-bottom: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 1rem;
}
h2 { color: var(--text); border-bottom: 2px solid var(--primary); padding-bottom: 0.5rem; display: inline-block; }
"""

