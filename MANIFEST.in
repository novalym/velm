
include velm/py.typed
include velm/archetypes
include velm/default_templates

# The Aesthetic Soul (Styles)
recursive-include velm *.css
recursive-include velm *.tcss
    
# The Architectural Soul (Blueprints)
recursive-include velm *.scaffold
recursive-include velm *.symphony
recursive-include velm *.arch
    
# The Gnostic Memory (JSON Configs/Data)
recursive-include velm *.json
    
# The Forges (Templates & Archetypes)
recursive-include velm/archetypes *
recursive-include velm/default_templates *
    
# Exclusions (The Void)
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude .DS_Store

# [THE VOID SHIELD]
# Exclude all environmental DNA and local state
exclude .env
exclude .env.*
exclude *.bak
exclude *.pyc
exclude .scaffold/
exclude .git/
exclude .github/
exclude .scaffold
exclude .arch
exclude .symphony
exclude .txt
exclude .md
# [THE INCLUSION VOW]
# Include only the essential logic and metadata
recursive-include src/velm *
include README.md
include LICENSE
include pyproject.toml

# Exclude potential sensitive developer files
recursive-exclude tests *
recursive-exclude docs *